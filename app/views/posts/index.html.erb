<section class="post-index">
  <h2 class="index-title">投稿一覧</h2>

  <div class="search-form">
    <%= form_with url: search_posts_path, method: :get, local: true do |form| %>
      <%= form.label :keyword, "キーワード検索:" %>
      <%= form.text_field :keyword, placeholder: "タイトルを入力" %>
      <%= form.submit "検索" %>
    <% end %>
  </div>

  <hr></hr>

  <div class="post-grid">
    <% @posts.each do |post| %>
      <%= link_to post_path(post), class: "post-card-link" do %>
        <div class="post-card">
          <div class="post-image">
            <% if post.image.attached? %>
              <%= image_tag post.image %>
            <% end %>
          </div>

          <div class="post-info">
            <h3 class="post-title"><%= post.title %></h3>
            <p class="post-user"><span>投稿者: </span> <%= post.user.name %></p>
            <div class="post-date">投稿日: <%= post.created_at.strftime('%Y/%m/%d') %></div>
          </div>
        </div>
      <% end %>
      <div class="fav-btn-pos">
        <%= render "favorites/btn", post: post %>
      </div>
    <% end %>
  </div>
</section>