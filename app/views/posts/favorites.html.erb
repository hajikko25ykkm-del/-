<section class="post-index">
  <h2 class="index-title">お気に入り一覧</h2>

  <hr></hr>

  <div class="post-grid">
    <% if @favorite_posts.any? %>
      <% @favorite_posts.each do |post| %>
        <%= link_to post_path(post), class: "post-card-link" do %>
          <div class="post-card">
            <div class="post-image">
              <% if post.image.attached? %>
                <%= image_tag post.image %>
              <% end %>
            </div>

            <div class="post-info">
              <h3 class="post-title"><%= post.title %></h3>
              <p class="post-user"><span>投稿者: </span> <%= post.user.name %></p>
              <div class="post-date">投稿日: <%= post.created_at.strftime('%Y/%m/%d') %></div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <p>お気に入りした投稿はまだありません。</p>
    <% end %>
  </div>
</section>