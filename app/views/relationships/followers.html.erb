<div class="user-list-container" style="max-width: 600px; margin: 0 auto;">
  <h2>フォロワー</h2>
  <% if @users.exists? %>
    <% @users.each do |user| %>
      <%= render 'user_list', user: user %>
    <% end %>
  <% else %>
    <p style="text-align: center; color: #888;">フォロワーはいません。</p>
  <% end %>
</div>